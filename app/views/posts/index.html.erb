<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table class="table table-hover">
  <thead>
    <tr class="table-dark">
      <th>Tweet</th>
      <th>Username</th>
      <th>Date</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.tweet %></td>
        <td><%= post.username %></td>
        <td><%= post.date %></td>
        <td><%= post.location %></td>
        <td><%= link_to 'Show', post, class:"btn btn-outline-success" %></td>
        <td><%= link_to 'Edit', edit_post_path(post), class:"btn btn-outline-warning" %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-outline-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
