<p>
  <strong>Tweet:</strong>
  <%= @post.tweet %>
</p>

<p>
  <strong>Username:</strong>
  <%= @post.username %>
</p>

<p>
  <strong>Date:</strong>
  <%= @post.date %>
</p>

<p>
  <strong>Location:</strong>
  <%= @post.location %>
</p>

<p>
  <strong>Image:</strong>
  <br>
  <%= image_tag(@post.image, style:"width:200px") %>
</p>


<% if @post.user == current_user %>
  <%= link_to 'Edit', edit_post_path(@post), class:"btn btn-outline-warning" %>
  <%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-outline-danger' %>
<% end %>
<%= link_to 'Back', posts_path, class:"btn btn-secondary" %>
